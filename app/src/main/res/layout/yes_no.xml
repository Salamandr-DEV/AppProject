<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/yes_no"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pink_blue">

    <TextView
        android:id="@+id/textYesNo"
        android:layout_width="277dp"
        android:layout_height="151dp"
        android:autoText="false"
        android:gravity="center"
        android:text="You want to know the truth"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonYesNo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.31" />

    <Button
        android:id="@+id/buttonYesNo"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="183dp"
        android:layout_height="80dp"
        android:text="Again"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textYesNo" />
</androidx.constraintlayout.widget.ConstraintLayout>